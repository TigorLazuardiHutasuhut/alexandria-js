{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/**"],
    "typedocOptions": {
        "mode": "files",
        "out": "docs"
    }
}
